.main
  .main__header
    .main__header__box
      .main__header__box__group
        .main__header__box__group__names
          = link_to group_messages_path(@group) do
            .main__header__box__group__name
              = @group.name
      .main__header__box__member
        = current_user.name
    .main__header__edit
      = link_to edit_group_path(@group), class: "edit" do
        Edit
  .main__messages
    = render @messages
  .main__form
    = form_for [@group, @message] do |f|
      .form__input
        = f.text_field :content, class: "form__input-text", placeholder: 'type a message'
        = f.label :image, class: "form__input-image" do
          = icon('fa', 'image')
          = f.file_field :image, class: 'form__input-image-hidden'
      = f.submit 'send', class: 'send'